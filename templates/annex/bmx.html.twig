{% extends "base.html.twig" %}

{% block stylesheets %}
    <link rel="stylesheet" href="css/bmx.css"> 
{% endblock %}

{% block navbar %}
    <nav class="navbar navbar-expand-lg navbar-dark fixed-top mx-4">
        <div class="container-fluid">
            <a class="navbar-brand" href="{{path('index')}}">
                <img src="/img/logo-tete-bmx.svg" alt="" height="24">
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
            <div class="navbar-nav">
                <a class="nav-link" aria-current="page" id="about_me" href="{{path("about_me")}}">a propos</a>
                <a class="nav-link" id="contact" href="{{path("contact")}}">me contacter</a>
                <a class="nav-link" id="web" href="{{path("web_creation")}}">web</a>
