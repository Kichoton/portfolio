{# Modèle de page :
tous les éléments communs aux pages vont etre dans la base
les autres pages doivent donc commencer par 
{% extends "base.html.twig"} %}
 #}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>
            {% block title %}Théo SAEZ - portfolio{% endblock %}
        </title>
        <link href="/css/bootstrap.min.css" rel="stylesheet">
        <link rel="stylesheet" href="/css/style.css">        
        {% block stylesheets %}{% endblock %}

       
    </head>
    <body class="p-5">
        
        {% block navbar %}
            <nav class="navbar navbar-expand-lg bg-white navbar-light fixed-top mx-4">
                <div class="container-fluid">
                    <a class="navbar-brand" href="{{path('index')}}">
                        <img src="/img/logo-tete.svg" alt="" height="24">
                    </a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
                    <div class="navbar-nav">
                        <a class="nav-link" aria-current="page" id="about_me" href="{{path("about_me")}}">a propos</a>
                        <a class="nav-link" id="contact" href="{{path("contact")}}">me contacter</a>
                        <a class="nav-link" id="web" href="{{path("web_creation")}}">web</a>
                        <a class="nav-link" id="graphisme" href="{{path("graphic_creation")}}" tabindex="-1" aria-disabled="true">graphisme</a>
                    </div>
                    </div>
                </div>
            </nav>
        {% endblock %}
        
        {% if app.user %}
            <div class="fixed-bottom w-100 bg-dark text-white text-end px-5 py-3">
                <a class="text-white" href="/logout">Déconnexion</a>
                <a class="text-white" href="{{path("admin")}}">Admin</a>
                <a class="text-white" href="{{path("messages")}}">Messages</a>
            </div>
        {% endif %}
        
        {% block body %}
        {% endblock %}
        
        <script src="/js/bootstrap.bundle.min.js" ></script>
        <script src="/js/jquery.js"></script>
        <script src="/js/script.js"></script>
        {% block javascripts %}{% endblock %}
    </body>
</html>
